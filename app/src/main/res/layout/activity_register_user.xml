<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Register_user">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_white"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="90dp"
            android:gravity="center">
            <EditText
                android:id="@+id/etRegisterName"
                android:layout_width="150pt"
                android:layout_height="wrap_content"
                android:hint="Ingrese su nombre"
                android:textColor="@color/black"
                android:textColorHint="@color/material_dynamic_neutral50" />

            <EditText
                android:id="@+id/etRegisterCorreo"
                android:layout_width="150pt"
                android:layout_height="wrap_content"
                android:hint="Ingrese su correo"
                android:textColor="@color/black"
                android:textColorHint="@color/material_dynamic_neutral50" />

            <EditText
                android:id="@+id/etRegisterPass"
                android:layout_width="150pt"
                android:layout_height="wrap_content"
                android:hint="Ingrese su contraseÃ±a"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/material_dynamic_neutral50" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="100pt"
                android:layout_height="wrap_content"
                android:backgroundTint="#FE6525"
                android:onClick="register"
                android:text="Registrarse"
                android:layout_marginTop="10pt"/>

        </LinearLayout>

    </FrameLayout>




</LinearLayout>